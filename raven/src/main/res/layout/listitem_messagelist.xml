<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/listitems_topbottom_margin"
    android:paddingTop="@dimen/listitems_topbottom_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/placeholder_contactname"
        android:id="@+id/textView_ContactName"
        android:layout_marginBottom="@dimen/elements_bottom_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/placeholder_messagepreview"
        android:id="@+id/textView_messagePreview"
        android:ellipsize="end"
        android:textColor="@color/color_messagePreview"/>
</LinearLayout>